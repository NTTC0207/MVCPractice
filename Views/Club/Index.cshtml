@model IEnumerable<Club>
@*
 
*@
@{
}


<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">

            @foreach(var item in Model){
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" style="object-fit:cover" src="@item.Image" height="225" width="100%"  alt="Card image cap">
                        <div class="card-body">
                            <div style={{}}> @item.Title </div>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Club" asp-action="Detail" asp-route-id="@item.AddressId">View</a>
                                 
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    }

                                </div>
                                <small class="text-muted">@item.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
          
           

        </div>
    </div>
</div>
